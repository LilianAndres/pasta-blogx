{% extends 'base.html.twig' %}

{% block content %}

    <div class="postEntier">

        <h2>{{ post.title }}</h2>
        <h3>{{ post.description }}</h3>
        <p>Crée le : {{ post.createdAt|date("m/d/Y") }}</p>
        <p>Publié le : {{ post.publishedAt|date("m/d/Y") }}</p>

        <p>{{ post.content }}</p>

    </div>

    <div class="commentsList">
        <h2>Commentaires</h2>
        {% for comment in comments %}

            <div class="Onecomment">
                <h5>Posté par {{ comment.username }}</h5>
                <p>{{ comment.content }}</p>
                <p>Publié le {{ comment.createdAt|date("m/d/Y") }}</p>
            </div>

        {% endfor %}
    </div>

    <div class="commentForm">
        {{  form_start(commentForm) }}

        {{ form_label(commentForm.username, 'Username') }}
        {{ form_widget(commentForm.username,{'attr': {'class': 'form-control'}}) }}

        {{ form_label(commentForm.content, 'Commentaire') }}
        {{ form_widget(commentForm.content,{'attr': {'class': 'form-control'}}) }}

        <br>
        <br>

        {{ form_label(commentForm.save, 'Enregistrer') }}
        {{ form_widget(commentForm.save,{'attr': {'class': 'btn-dark'}}) }}

        {{ form_end(commentForm) }}
    </div>


{%  endblock %}