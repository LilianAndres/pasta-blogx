{% extends 'base.admin.html.twig' %}

{% block content %}
    <h1>Commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ comment.username }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Valid</th>
                <td>{{ comment.valid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_comment_index') }}" class="btn btn-primary">Retour Ã  la liste</a>

    {{ include('admin/comment/_delete_form.html.twig') }}
{% endblock %}
