{% extends 'base.admin.html.twig' %}

{% block content %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Content</th>
                <th>Slug</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>PublishedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.description }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.slug }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.publishedAt ? post.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_post_show', {'id': post.id}) }}" class="btn btn-primary">Voir</a>
                    <a href="{{ path('admin_post_edit', {'id': post.id}) }}" class="btn btn-primary">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucun posts n'a été trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="container">
        {{ knp_pagination_render(posts) }}
    </div>

    <a href="{{ path('admin_post_new') }}" class="btn btn-primary">Crééer un nouveau post</a>
{% endblock %}
